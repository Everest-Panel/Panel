#!/bin/php8.2

<?php

error_reporting(0);

require __DIR__."/resources/assets/database.php";
use Everest\Assets\Database;

$config = json_decode(file_get_contents(__DIR__."/config.json"), true);
$config["DATABASE"]["HOSTNAME"] = "database";
$color = [
    "reset"=>"\e[39m",
    "red"=>"\e[31m",
    "green"=>"\e[32m",
    "yellow"=>"\e[33m",
    "blue"=>"\e[34m",
    "magenta"=>"\e[35m",
    "cyan"=>"\e[36m"
];


try {
    $db = new Database($config["DATABASE"]);
}
catch (Exception | Error $e) {
    try {
        $config["DATABASE"]["HOSTNAME"] = "localhost";
        $config["DATABASE"]["PORT"] = 6000;
        $db = new Database($config["DATABASE"]);
    } catch (Exception | Error $e) {
        echo sprintf("Database %Failed%s %sInternal%s & %sExternal%s", $color["red"], $color["reset"], $color["blue"], $color["reset"], $color["yellow"], $color["reset"]), PHP_EOL;
        exit();
    }
}

echo sprintf("%sSetup %s1\n%sBackup %s2\n%sValidate %s3\n", $color["magenta"], $color["reset"], $color["blue"], $color["reset"], $color["green"], $color["reset"]);

$task = readline("\n[2]: ");

switch ($task) {
    case 1:
        echo "Setup";
        break;
    case null:
    case 2:
        echo "Backup";
        break;
    case 3:
        echo "Validate";
        break;
}